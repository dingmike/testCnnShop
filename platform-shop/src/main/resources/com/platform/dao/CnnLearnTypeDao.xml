<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.CnnLearnTypeDao">

    <resultMap type="com.platform.entity.CnnLearnTypeEntity" id="cnnLearnTypeMap">
        <result property="id" column="id"/>
        <result property="learnType" column="learn_type"/>
        <result property="status" column="status"/>
        <result property="addTime" column="add_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.CnnLearnTypeEntity">
		select
			`id`,
			`learn_type`,
			`status`,
			`add_time`,
			`update_time`
		from cnn_learn_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.CnnLearnTypeEntity">
		select
    		`id`,
    		`learn_type`,
    		`status`,
    		`add_time`,
    		`update_time`
		from cnn_learn_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from cnn_learn_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.CnnLearnTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into cnn_learn_type(
			`learn_type`,
			`status`,
			`add_time`,
			`update_time`)
		values(
			#{learnType},
			now(),
			now())
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.CnnLearnTypeEntity">
		update cnn_learn_type 
		<set>
			<if test="learnType != null">`learn_type` = #{learnType}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="addTime != null">`add_time` = now(), </if>
			<if test="updateTime != null">`update_time` = now()</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from cnn_learn_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from cnn_learn_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>